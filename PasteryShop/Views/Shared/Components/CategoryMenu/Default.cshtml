@model IEnumerable<Category>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle"
    type="button" 
    data-bs-toggle="dropdown" 
    aria-expanded="false">
        Categories
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item"
               asp-controller="Pie"
               asp-action="List"
               asp-route-category=""
            >All Pies</a>
        </li>
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" 
                asp-controller="Pie"
                asp-action="List"
                asp-route-category="@category.Name"
                >@category.Name</a>
            </li>
        }       
    </ul>
</div>